{
  "name": "lexonomy",
  "version": "1.0.0",
  "description": "Lexonomy is a light-weight dictionary editor",
  "main": "app.js",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@riotjs/cli": "^6.0.5",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "riot": "^6.1.2",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "~1.54.4"
  },
  "scripts": {
    "build": "npx rollup -c && npx rollup -c rollup.config.codemirror.js",
    "watch": "npx rollup -c -w",
    "minify": "npx terser bundle.js -c -m --source-map \"url='bundle.min.js.map'\" --output bundle.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elexis-eu/lexonomy.git"
  },
  "keywords": [
    "lexonomy",
    "dictionary",
    "lexicography"
  ],
  "author": "Lexical Computing",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/elexis-eu/lexonomy/issues"
  },
  "homepage": "https://github.com/elexis-eu/lexonomy#readme",
  "dependencies": {
    "@codemirror/lang-css": "^6.3.0",
    "@codemirror/lang-javascript": "^6.2.2",
    "codemirror": "^6.0.1",
    "diff": "^5.1.0",
    "rollup-plugin-riot": "^9.0.1"
  }
}
