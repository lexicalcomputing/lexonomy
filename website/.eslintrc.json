{
  "extends": ["standard"],
  "env": {
      "browser": true,
      "node": true
  },
  "rules": {
      "semi": ["error", "always", { "omitLastInOneLineBlock": true }],
      "semi-spacing": ["error", {"before": false, "after": true}],
      "no-unexpected-multiline": "error",
      "quotes": ["error", "double", "avoid-escape"],
      "eqeqeq": ["warn", "smart"],
      "no-useless-escape": "warn",
      "camelcase": "warn",
      "handle-callback-err": "warn",
      "no-redeclare": "warn",
      "dot-notation": "warn",
      "quote-props": "warn"
  }
}
