         input[type="text"],
         input[type="number"]{
            background-color: #fff;
            border: 1px solid #000;
            height: 25px;
            line-height: 25px;
            margin-bottom: 0;
            max-width: 200px;
         }
         input[type="checkbox"] + span{
            padding-left: 20px;
         }
