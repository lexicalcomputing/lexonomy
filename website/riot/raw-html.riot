<raw-html class="raw-html">
   <script>
      export default {
         upd () {
            this.root.innerHTML = typeof this.props.content == "string"
                  ? DOMPurify.sanitize(this.props.content.replaceAll("{", "\\{"))
                  : this.props.content
         },

         onMounted(){
            this.upd()
         },

         onUpdated() {
            this.upd()
         }
      }
   </script>
</raw-html>
